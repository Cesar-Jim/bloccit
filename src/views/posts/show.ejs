<!DOCTYPE html>
<html>

<head>
   <% include ../static/partials/head.ejs %>
</head>

<body>
   <% include ../static/partials/navbar.ejs %>

   <main class="container">

      <% include ../static/partials/messages.ejs %>

      <div style="display: flex; align-items:center;">
         <% if(currentUser) { %>
         <% include ../votes/voting.ejs %>
         <% } %>
         <h1>
            <%= post.title %>
         </h1>
      </div>

      <h1>
         <%= post.title %>
      </h1>
      <% if(currentUser) { %>
      <form style="display:initial" action="/topics/<%= post.topicId %>/posts/<%= post.id %>/destroy" method="post">
         <a href="/topics/<%= post.topicId %>/posts/<%= post.id %>/edit" class="btn btn-warning">Edit</a>
         <button type="submit" class="btn btn-danger">Delete</button>
         <br>
         <br>
      </form>
      <% } %>

      <p>
         <%= post.body %>
      </p>

      <!-- Only show the comments form if there is a signed in user -->
      <% if(currentUser) { %>
      <% include ../comments/new.ejs %>
      <% } %>

      <!-- list the comments associated with this post -->
      <section id="comments-list">
         <% if(post.comments) { %>
         <% post.comments.forEach((comment) => { %>

         <!-- For each comment, we render a partial containing the markup needed to render each comment -->
         <%- include("../comments/show.ejs", {comment}) %>
         <% }) %>
         <% } %>

      </section>
   </main>

   <% include ../static/partials/baseScripts.ejs %>
</body>

</html>